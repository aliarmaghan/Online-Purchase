@using ModelServices.AdminModel
@model CategoryBaseModel

<input id="hdnMessage" type="hidden" value="@TempData["ResponseMessage"]" />
<input id="hdnValue" type="hidden" value="@TempData["ResponseValue"]" />
<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <a style="margin-left:960px" class="btn btn-sm btn-inverse-primary" id="btnAdd">Add<i class="mdi mdi-plus-box"></i></a>
                <table class="table table-hover" id="tableBrand">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Code</th>
                            <th>Created Date</th>
                            <th>Created By</th>
                            <th>Is Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@item.CATEGORY_NAME </td>
                                <td>@item.CATEGORY_CODE</td>
                                <td>@item.MODIFIED_DATE</td>
                                <td>@item.MODIFIED_BY</td>
                                <td>@item.IS_ACTIVE</td>
                                <td>
                                    <a href="@Url.Action("EditGender","Master",new {area="Admin",id=item.CATEGORY_ID})"><i class="mdi mdi-grease-pencil text-primary"></i></a>
                                    &nbsp;&nbsp;&nbsp;
                                    <a href="@Url.Action("DeleteGender","Master",new {area="Admin",id=item.CATEGORY_ID})"><i class="mdi mdi-delete text-danger"></i></a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@Html.Partial("~/Areas/Admin/Views/Shared/_AddUpdateCategory.cshtml", Model)

@section Scripts
{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/custom/Category.js"></script>
}
