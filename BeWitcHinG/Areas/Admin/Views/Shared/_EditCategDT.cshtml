@using ModalServices.AdminModel
@model CategoryDtBaseModel




<div class="modal fade" id="editCategDT" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <form method="post" id="formEditCategDT">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Item</h5>
                    <button type="button" class="btn-close BtnClose" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="hdnUCategId" value="" />
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Category</label>
                            @Html.DropDownList("CATEGORYID", Enumerable.Empty<SelectListItem>(), "--Select Category--", new { @class = "form-control form-control-sm", @style = "color:#040404;", @id = "categ_dll" })
                            @Html.ValidationMessageFor(m => m.CATEGORYID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12 form-group">
                            <label>item Name</label>
                            @Html.TextBoxFor(x => x.ITEM_NAME, new { @class = "form-control", @id = "u_item_name" })
                            @Html.ValidationMessageFor(m => m.ITEM_NAME, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Code</label>
                            @Html.TextBoxFor(x => x.CODE, new { @class = "form-control", @id = "u_item_code" })
                            @Html.ValidationMessageFor(m => m.CODE, "", new { @class = "text-danger" })
                        </div>

                        <div class=" form-check-flat form-check-primary">
                            <label class="form-check-label">
                                @Html.CheckBoxFor(x => x.IS_ACTIVE, new { @class = "form-check-input", @type = "checkbox", @id = "u_is_active" })Is Active
                            </label>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary BtnClose">Close</button>
                    <button type="submit" class="btn btn-sm btn-primary BtnEditCateg">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>



