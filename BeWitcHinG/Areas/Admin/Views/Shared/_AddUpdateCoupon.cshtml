@using ModelServices.AdminModel
@model CouponBaseModel


<!-- Button trigger modal -->
@*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
    </button>*@

<!-- Modal -->
<div class="modal fade" id="AddUpdateCoupon" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <form method="post" id="formCoupon">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Coupon</h5>
                    <button type="button" class="btn-close btnClose" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="hdnCoupId" value="" />
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>COUPON NAME</label>
                            @Html.TextBoxFor(x => x.COUPON_NAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.COUPON_NAME, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12 form-group">
                            <label>REMARKS</label>
                            @Html.TextBoxFor(x => x.REMARKS, new { @class = "form-control" })
                        </div>
                        <div class="col-md-12 form-group">
                            <h5>Coupon validity</h5>
                            <div class="row justify-content-center">
                                <div class="col-lg-6 col-sm-12">
                                    <label for="startDate">From</label>
                                    @Html.TextBoxFor(x => x.EXP_FROM, new { @class = "form-control", @type = "date" })
                                    <span id="startDateSelected"></span>
                                    @Html.ValidationMessageFor(m => m.EXP_FROM, "", new { @class = "text-danger" })

                                </div>
                                <div class="col-lg-6 col-sm-12">
                                    <label for="endDate">To</label>
                                    @Html.TextBoxFor(x => x.EXP_TO, new { @class = "form-control", @type = "date" })
                                    <span id="endDateSelected"></span>
                                    @Html.ValidationMessageFor(m => m.EXP_TO, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class=" form-check-flat form-check-primary">
                            <label class="form-check-label">
                                @Html.CheckBoxFor(x => x.IS_ACTIVE, new { @class = "form-check-input", @type = "checkbox" })Is Active
                            </label>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary btnClose">Close</button>
                    <button type="submit" class="btn btn-sm btn-primary" id="btnAddUpdate">Save</button>
                </div>
            </div>
        </form>

    </div>
</div>
